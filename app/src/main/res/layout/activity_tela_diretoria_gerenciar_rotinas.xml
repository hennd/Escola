<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDiretoriaGerenciarRotinas">

    <TextView
        android:id="@+id/txtGerenciarRotinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/titulo_redondo"
        android:text="Gerenciar Rotinas"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSairGerenciarRotinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/titulo_redondo"
        android:text="Voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExcluirRotina" />

    <Button
        android:background="@drawable/titulo_redondo"
        android:id="@+id/btnEditarRotina"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Editar Rotina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDataGerenciar" />

    <Spinner
        android:id="@+id/spinner_alunos_Gerenciar"
        android:layout_width="339dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelecioneAlunoGerenciar" />

    <TextView
        android:id="@+id/txtSelecioneAlunoGerenciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Selecione o Aluno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGerenciarRotinas" />

    <TextView
        android:id="@+id/txtSelecioneDataGerenciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Selecione a Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGerenciarRotinas" />

    <Button
        android:background="@drawable/titulo_redondo"
        android:id="@+id/btnExcluirRotina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Excluir Rotina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarRotina" />

    <Button
        android:id="@+id/dpRotinaGerenciar"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_iconfinder_organizer_1118206"
        app:layout_constraintBottom_toBottomOf="@+id/edtDataGerenciar"
        app:layout_constraintStart_toEndOf="@+id/edtDataGerenciar"
        app:layout_constraintTop_toTopOf="@+id/edtDataGerenciar" />

    <EditText
        android:background="@drawable/redondo"
        android:id="@+id/edtDataGerenciar"
        android:layout_width="101dp"
        android:layout_height="45dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelecioneDataGerenciar" />
</androidx.constraintlayout.widget.ConstraintLayout>