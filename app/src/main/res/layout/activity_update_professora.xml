<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfessora">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfessora">

    <TextView
        android:id="@+id/txtDadosProfessora"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/titulo_redondo"
        android:text="Dados da Professora"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNomeProfessoraAtualiza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/redondo"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtDadosProfessora"
        tools:layout_editor_absoluteX="11dp" />

    <EditText
        android:id="@+id/edtTelefoneProfessoraAtualiza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/redondo"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeProfessoraAtualiza"
        tools:layout_editor_absoluteX="-16dp" />

    <Spinner

        android:id="@+id/spinner_cargo_professora_atualiza"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edtTelefoneProfessoraAtualiza"
        tools:layout_editor_absoluteX="-10dp" />

    <Button
        android:id="@+id/btnAtualizaProfessora"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/titulo_redondo"
        android:text="Atualizar"
        app:layout_constraintTop_toBottomOf="@+id/spinner_cargo_professora_atualiza"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnVoltarTelaProfessores"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/titulo_redondo"
        android:text="Voltar"
        app:layout_constraintTop_toBottomOf="@+id/btnAtualizaProfessora"
        tools:layout_editor_absoluteX="-16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>