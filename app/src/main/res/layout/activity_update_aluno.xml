<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAluno">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".UpdateAluno">


    <TextView
        android:id="@+id/txtDadosAtualizaAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/titulo_redondo"
        android:text="Dados do Aluno"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNomeAlunoAtualiza"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/redondo"
        app:layout_constraintTop_toBottomOf="@+id/txtDadosAtualizaAlunos"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtNomeMaeAlunoAtualiza"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/redondo"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeAlunoAtualiza"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtNomePaiAlunoAtualiza"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/redondo"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeMaeAlunoAtualiza"
        tools:layout_editor_absoluteX="-16dp" />

    <EditText
        android:id="@+id/edtTelefoneContatoAlunoAtualiza"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/redondo"
        app:layout_constraintTop_toBottomOf="@+id/edtNomePaiAlunoAtualiza"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnAtualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/titulo_redondo"
        android:text="Atualizar"
        app:layout_constraintTop_toBottomOf="@+id/edtTelefoneContatoAlunoAtualiza"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/titulo_redondo"
        android:text="Voltar"
        app:layout_constraintTop_toBottomOf="@+id/btnAtualizar"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>