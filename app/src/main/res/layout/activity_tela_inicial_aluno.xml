<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicialAluno">

    <Button
        android:id="@+id/dpRotinaAluno"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/ic_iconfinder_organizer_1118206"
        app:layout_constraintBottom_toBottomOf="@+id/edtDataRotinaAluno"
        app:layout_constraintStart_toEndOf="@+id/edtDataRotinaAluno"
        app:layout_constraintTop_toTopOf="@+id/edtDataRotinaAluno" />

    <TextView
        android:id="@+id/txtTituloAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/titulo_redondo"
        android:text="Rotinas"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:background="@drawable/titulo_redondo"
        android:id="@+id/btnSairAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVisualizarRotinaAluno" />

    <EditText
        android:background="@drawable/redondo"
        android:id="@+id/edtDataRotinaAluno"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/btnVisualizarRotinaAluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/titulo_redondo"
        android:onClick="visualizarRotinaAluno"
        android:text="Visualizar Rotina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDataRotinaAluno" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Selecione a data:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloAluno" />

</androidx.constraintlayout.widget.ConstraintLayout>