    <EditText
        android:textColor="@drawable/edit_text_selector"
        android:id="@+id/edtAlmocov"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:background="@drawable/redondo"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtAlmocov"
        app:layout_constraintEnd_toEndOf="@+id/edtLanche1v"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtLanche1v"
        app:layout_constraintTop_toTopOf="@+id/txtAlmocov"
        app:layout_constraintVertical_bias="0.523" />

    <EditText
        android:textColor="@drawable/edit_text_selector"
        android:id="@+id/edtJantarv"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:background="@drawable/redondo"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtJantarv"
        app:layout_constraintEnd_toEndOf="@+id/edtLanche2v"
        app:layout_constraintStart_toStartOf="@+id/edtLanche2v"
        app:layout_constraintTop_toTopOf="@+id/txtJantarv" />

    <EditText
        android:textColor="@drawable/edit_text_selector"
        android:id="@+id/edtLanche1v"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginStart="6dp"
        android:background="@drawable/redondo"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtLanche1v"
        app:layout_constraintStart_toEndOf="@+id/txtLanche1v"
        app:layout_constraintTop_toTopOf="@+id/txtLanche1v"
