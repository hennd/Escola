<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".TelaProfessorDiretoria">4


    <Button
        android:id="@+id/btnEditarProfessora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Editar Professor Selecionado"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProfessoras"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/btnExcluirProfessora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Excluir Professor Selecionado"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarProfessora"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnAdcionarProfessora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="abrirTelaProfessoras"
        android:text="Cadastrar Novo Professor"
        app:layout_constraintTop_toBottomOf="@+id/btnExcluirProfessora"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:onClick="voltarTelaDiretoria"
        android:text="Voltar"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcionarProfessora"
        tools:layout_editor_absoluteX="-2dp" />

    <Spinner
        android:id="@+id/spinnerProfessoras"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txtProfessoras"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtProfessoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="PROFESSORAS"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>