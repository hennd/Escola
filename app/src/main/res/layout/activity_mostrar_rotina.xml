    <TextView
        android:id="@+id/txtAlmocov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Almoço"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLanche1v" />

    <TextView
        android:id="@+id/txtJantarv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Jantar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLanche2v" />

    <RadioGroup
        android:id="@+id/rgFebrev"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/edtMedicacaov"
        app:layout_constraintStart_toStartOf="@+id/edtMedicacaov"
        app:layout_constraintTop_toTopOf="@+id/txtFebrev">


