        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtFebrev"
        app:layout_constraintStart_toEndOf="@+id/txtFebrev"
        app:layout_constraintTop_toBottomOf="@+id/spinner_febre_tempv" />

    <TextView
