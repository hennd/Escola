<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaProfessorDiretoria">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaProfessorDiretoria">4


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Selecione a Professora:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProfessoras" />

    <Button
        android:id="@+id/btnEditarProfessora"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/titulo_redondo"
        android:text="Editar Professora Selecionada"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProfessoras"
        tools:layout_editor_absoluteX="-1dp" />

    <Button
        android:id="@+id/btnExcluirProfessora"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/titulo_redondo"
        android:text="Excluir Professora Selecionada"
        app:layout_constraintTop_toBottomOf="@+id/btnEditarProfessora"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnAdcionarProfessora"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/titulo_redondo"
        android:onClick="abrirTelaProfessoras"
        android:text="Cadastrar Nova Professora"
        app:layout_constraintTop_toBottomOf="@+id/btnExcluirProfessora"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnBack"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/titulo_redondo"
        android:onClick="voltarTelaDiretoria"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcionarProfessora"
        tools:layout_editor_absoluteX="-2dp" />

    <Spinner
        android:id="@+id/spinnerProfessoras"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtProfessoras"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/titulo_redondo"
        android:text="Professoras"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>