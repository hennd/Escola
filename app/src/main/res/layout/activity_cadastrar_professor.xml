<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".CadastrarProfessor">


    <TextView
        android:id="@+id/txtDadosProfessor"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titulo_redondo"
        android:text="Dados do Professora"
        android:textAlignment="center"
        android:textSize="40dp" />

    <EditText
        android:background="@drawable/redondo"

        android:id="@+id/edtNomeProfessora"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Nome Professora"
        android:inputType="textPersonName" />

    <EditText
        android:background="@drawable/redondo"

        android:id="@+id/edtTelefoneProfessora"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Telefone Professora"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinner_cargo_professora"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <EditText
        android:background="@drawable/redondo"

        android:id="@+id/edtEmailProfessora"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Email Professora"
        android:inputType="textPersonName" />

    <EditText
        android:background="@drawable/redondo"

        android:id="@+id/edtSenhaProfessora"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Senha Professora"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar na Turma"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spinner_todas_turmas_addprof"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <Button
        android:background="@drawable/titulo_redondo"

        android:id="@+id/btnCadastrarProfessora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />

    <Button
        android:background="@drawable/titulo_redondo"

        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="voltarTelaAlunos"
        android:text="Voltar" />

</LinearLayout>