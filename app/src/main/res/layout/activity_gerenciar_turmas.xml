<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GerenciarTurmas">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Agenda">

    <TextView
        android:id="@+id/txtVisualizarTurmas"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/titulo_redondo"
        android:text="Gerenciar Turmas"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/spinner_gerenciar_turmas"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtVisualizarTurmas"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtAlunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alunos"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_gerenciar_turmas"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/lvAlunosTurmaSelecionada2"

        android:layout_width="match_parent"
        android:layout_height="388dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAlunos"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txtAlunoAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selecione o Aluno Para Adicionar"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lvAlunosTurmaSelecionada2"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinner_todos_alunos_gerenciar_turma"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAlunoAdd"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnAdcionarAlunoTurma"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/titulo_redondo"
        android:text="Adicionar Aluno Na Turma"
        app:layout_constraintTop_toBottomOf="@+id/spinner_todos_alunos_gerenciar_turma"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/txtExcluirAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Selecione o Aluno Para Excluir"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAdcionarAlunoTurma"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinner_alunos_para_excluir_turma"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtExcluirAluno"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/btnExcluirAlunoTurma"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/titulo_redondo"
        android:text="Excluir Aluno da Turma"
        app:layout_constraintTop_toBottomOf="@+id/spinner_alunos_para_excluir_turma"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/txtProfessores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Professores"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnExcluirAlunoTurma"
        tools:layout_editor_absoluteX="-16dp" />

    <ListView
        android:id="@+id/lvProfessoresTurmaSelecionada3"

        android:layout_width="match_parent"
        android:layout_height="204dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtProfessores"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>